# Environment Configuration
NODE_ENV=development

# Server Configuration
PORT=5001
CLIENT_PORT=3001

# CORS Configuration (for production)
CORS_ORIGIN=http://localhost:3001,https://yourdomain.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=.typ,.md,.jpg,.jpeg,.png,.gif,.webp

# Typst Configuration
TYPST_TIMEOUT=30000
TYPST_MAX_FILE_SIZE=10485760

# Paths
DOCUMENTS_DIR=./server/documents
UPLOADS_DIR=./server/uploads
COMPILED_DIR=./server/compiled

# Security
SESSION_SECRET=your-secure-session-secret-here

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Database (if you add one later)
# DATABASE_URL=mongodb://localhost:27017/blog
# DATABASE_NAME=blog

# Cache (if you add Redis later)
# REDIS_URL=redis://localhost:6379